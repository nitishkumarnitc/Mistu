<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kedee.mistu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kedee.mistu.Begin"
            android:theme="@style/BeginTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kedee.mistu.home.Home" />
        <activity
            android:name="com.example.kedee.mistu.Interests.Registered"
            android:theme="@style/BeginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.example.kedee.mistu.ask.ASKCat" />
        <activity
            android:name="com.example.kedee.mistu.ask.TAG"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.kedee.mistu.profile.Profile"
            android:theme="@style/BeginTheme" />
        <activity android:name="com.example.kedee.mistu.ahr.AHR" />
        <activity
            android:name="com.example.kedee.mistu.ahr.HRDetailView"
            android:theme="@style/BeginTheme" />
        <activity
            android:name="com.example.kedee.mistu.notification.Notification"
            android:theme="@style/BeginTheme" />
        <activity android:name="com.example.kedee.mistu.ProfileView" />
        <activity android:name="com.example.kedee.mistu.home.ShareExp" />
        <activity
            android:name="com.example.kedee.mistu.Verification"
            android:theme="@style/BeginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.kedee.mistu.search.Search"
            android:theme="@style/BeginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.kedee.mistu.profile.ShowInterests"
            android:theme="@style/BeginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.kedee.mistu.ask.ASKActivity"
            android:theme="@style/BeginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.kedee.mistu.profile.AskedHelpInfo"
            android:theme="@style/BeginTheme" />
        <activity
            android:name="com.example.kedee.mistu.Contact"
            android:theme="@style/BeginTheme" />
        <activity android:name="com.example.kedee.mistu.settings.Setting" />
        <activity android:name="com.example.kedee.mistu.settings.Reset" />
    </application>

</manifest>